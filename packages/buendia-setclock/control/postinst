set -e; . /usr/local/opt/buendia/utils.sh

case $1 in
    configure)
        cd /tmp
        gcc -o buendia-setclock /usr/src/buendia-setclock.c
        install -m 4755 -v buendia-setclock /usr/bin
        ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        ;;

    *) exit 1
esac
